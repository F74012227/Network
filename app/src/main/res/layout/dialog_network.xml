<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.SwitchCompat

        android:id="@+id/switch_wifi"
        android:layout_width="fill_parent"
        app:theme="@style/SwitchCompat.Theme"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/title_switch_wifi" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_mobile"
        android:layout_width="fill_parent"
        app:theme="@style/SwitchCompat.Theme"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/title_switch_mobile" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_hotspot"
        android:layout_width="fill_parent"
        app:theme="@style/SwitchCompat.Theme"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/title_switch_ap" />

</LinearLayout>